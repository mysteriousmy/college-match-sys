/* pages/athletes/login/athletesLogin.wxss */
.login_container{
    width:100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}
.login_form{
    background-color:rgba(255, 255, 255, 0.5);
    border-radius: 10px;
    backdrop-filter: blur(20px);
    width: 80%;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    height: auto;
    padding-top: 40px;
    padding-right: 20px;
    padding-left: 20px;
    padding-bottom: 40px;
    text-align: center;
    color: grey;
}
.login_form text{
    display: block;
    font-weight: 900;
    font-size: 23px;
}
.login_form input{
    display: block;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    padding: 10px;
    margin-top: 20px;
}
.login_btn{
    margin-top: 20px;
    border-radius: 10px;
    background-color: pink;
    color: white;
}