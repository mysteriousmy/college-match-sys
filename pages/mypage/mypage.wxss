.load{
   background-color:#1296db;
   border-radius: 6px;
   width: 90%;
   box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
   height: 300rpx;
   /*设置图片和文字垂直居中对齐*/
   display: flex;
   flex-direction: column;
   justify-content: center;
   margin: 0 auto;
   align-items: center;
   margin-bottom: 30px;
}
.load image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.load text{
  color:white;
}
.exit{
  width: 95%;
  margin-top: 40rpx;
}
.list_card{
    background-color:#ffffff;
    border-radius: 6px;
    width: 90%;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    height: auto;
    /*设置图片和文字垂直居中对齐*/
    display: flex;
    padding-top: 40px;
    padding-bottom: 100px;
    flex-direction: column;
    margin-bottom: 20px;
}
.btn{
    background-color: #ffffff;
    font-style:unset;
}
.btn-hover{
    transition: 0.1s;
    width: 100%;
    color:white;
    background-color: #1296db;
}