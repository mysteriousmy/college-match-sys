Page{

     background: #1DC7EA;
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #1DC7EA), color-stop(100%, #4091ff));
      background: -webkit-linear-gradient(top, #1DC7EA 0%, #4091ff 100%);
      background: -o-linear-gradient(top, #1DC7EA 0%, #4091ff 100%);
      background: -ms-linear-gradient(top, #1DC7EA 0%, #4091ff 100%);
      background: linear-gradient(to bottom, #1DC7EA 0%, #4091ff 100%);
  }

  .tool {
    width: 60px;
    height: 60px;
    display: block;
    text-align: center;
}

.tool image {
    display: inline;
}
.sort_content{
    position: fixed;
    top: 150px;
    left: 0;
    z-index: 9;
    width: 100%;
    height: 75%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
}
.prize{
    width: 30px!important;
    height: 30px!important;
}
.sort_data {
    height: 100%;
}
.tool text {
    display: inline;
}
.home_tool {
    background-color: #ffffff;
    border-radius: 6px;
    width: 90%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    /*设置图片和文字垂直居中对齐*/
    display: flex;
    padding-top: 10px;
    padding-bottom: 30px;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 30px;
    margin-top: 30px;
}
.none_data {
    text-align: center;
    height: 40px;
    font-size: 25px;
    color: rgba(0, 0, 0, 0.3);
    background-color: white;
    border-radius: 10px;
    margin-top: 20px;
    width: 100%;
    top: 40%;
  }
.uni_content{
    background-color:#ffffff;
    border-radius: 6px;
    width: 81%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    display: flex;
    padding: 20px;
    padding-bottom: 30px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    margin-top: 30px;
}
.uni_content image{
    width: 80px;
    height: 80px;
    border-radius: 50%;
}