/* components/athletes/info/info.wxss */
.header{
    width: 90%;
    height: 200px;
    background-color: orangered;
    border-radius: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    margin-top: 30px;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
}
.header image{
    border-radius: 50%;
    width: 150px;
    height: 150px;
}
.info{
    background-color:#ffffff;
    border-radius: 6px;
    width: 90%;
    margin: 0 auto;
    margin-top: 30px;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    height: auto;
    /*设置图片和文字垂直居中对齐*/
    display: flex;
    padding-top: 40px;
    padding-bottom: 100px;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
}
.text_info{
    width: 80%;
    display: inline-flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top:20px;
}
.text_info_long{
    margin-top: 20px;
    width: 50%;
}
.btn{
    width: 80%;
    display: flex;
    margin: 0 auto;
    flex-direction: row;
    justify-content: space-between;
}